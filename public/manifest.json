{
  "name": "Riders Luxury - Premium Ride Sharing",
  "short_name": "Riders Luxury",
  "description": "Experience premium ride sharing with elegant glassmorphism design. Share rides in luxury vehicles with verified drivers.",
  "lang": "en",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "orientation": "portrait-primary",
  "theme_color": "#000000",
  "background_color": "#000000",
  "scope": "/",
  "id": "com.riders.luxury",
  "categories": ["travel", "lifestyle", "social"],
  "screenshots": [
    {
      "src": "/icons/screenshot-mobile-1.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "mobile",
      "label": "Search and book rides"
    },
    {
      "src": "/icons/screenshot-mobile-2.png", 
      "sizes": "375x812",
      "type": "image/png",
      "platform": "mobile",
      "label": "Luxury glassmorphism interface"
    },
    {
      "src": "/icons/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Desktop experience"
    }
  ],
  "icons": [
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192", 
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png", 
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-72x72.png", 
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Find Rides",
      "short_name": "Search",
      "description": "Search for available rides",
      "url": "/?search=true",
      "icons": [
        {
          "src": "/icons/shortcut-search.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Offer Ride",
      "short_name": "Offer",
      "description": "Offer a ride to passengers",
      "url": "/?offer=true", 
      "icons": [
        {
          "src": "/icons/shortcut-offer.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Bookings",
      "short_name": "Bookings",
      "description": "View your ride bookings",
      "url": "/?bookings=true",
      "icons": [
        {
          "src": "/icons/shortcut-bookings.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "dir": "ltr",
  "iarc_rating_id": "",
  "serviceworker": {
    "src": "/sw.js",
    "scope": "/",
    "use_cache": true
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+ridershare",
      "url": "/ride?id=%s"
    }
  ],
    "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif"],
        "text/plain": [".txt"]
      }
    }
  ],
  "handle_links": "preferred"
}
